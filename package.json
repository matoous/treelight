{
  "name": "treelight",
  "private": true,
  "description": "Tree-sitter based syntax highlighter.",
  "version": "0.1.0",
  "type": "module",
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "license": "MIT",
  "workspaces": [
    "packages/languages/*",
    "packages/themes/*"
  ],
  "dependencies": {
    "treelight-theme-github-dark": "workspace:*",
    "web-tree-sitter": "^0.25.10"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@rslib/core": "^0.18.0",
    "@types/node": "^22.19.2",
    "ava": "^6.4.1",
    "rsbuild-plugin-publint": "^0.3.0",
    "tiny-benchy": "^2.1.0",
    "treelight-language-go": "workspace:*",
    "treelight-language-javascript": "workspace:*",
    "treelight-language-tsx": "workspace:*",
    "treelight-language-typescript": "workspace:*",
    "typescript": "^5.7.3"
  },
  "ava": {
    "timeout": "3m"
  },
  "engines": {
    "node": ">= 18"
  },
  "scripts": {
    "build": "npm run build:languages && npm run build:themes && rslib build",
    "build:languages": "node ./scripts/run-workspace-builds.mjs languages",
    "build:themes": "node ./scripts/run-workspace-builds.mjs themes",
    "build:watch": "rslib build --watch",
    "inspect": "rslib inspect",
    "tsc": "tsc --noEmit",
    "pretest": "npm run build",
    "test": "ava",
    "pretest:update": "npm run build",
    "test:update": "ava --update-snapshots",
    "prebench": "npm run build",
    "bench": "node bench.js",
    "lint": "biome ci --diagnostic-level=error --reporter=github",
    "format": "biome format --write",
    "create:language": "node ./scripts/create-language-package.mjs",
    "create:theme": "node ./scripts/create-theme-package.mjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/matoous/treelight.git"
  }
}
