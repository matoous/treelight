{
  "name": "treelight",
  "private": true,
  "description": "Tree-sitter based syntax highlighter.",
  "version": "0.0.2",
  "type": "module",
  "license": "MIT",
  "workspaces": [
    "packages/core",
    "packages/integration",
    "packages/languages/*",
    "packages/themes/*",
    "docs"
  ],
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@treelight/elixir": "workspace:*",
    "@treelight/go": "workspace:*",
    "@treelight/html": "workspace:*",
    "@treelight/java": "workspace:*",
    "@treelight/javascript": "workspace:*",
    "@treelight/json": "workspace:*",
    "@treelight/php": "workspace:*",
    "@treelight/python": "workspace:*",
    "@treelight/rust": "workspace:*",
    "@treelight/scheme": "workspace:*",
    "@treelight/tsx": "workspace:*",
    "@treelight/typescript": "workspace:*",
    "@treelight/yaml": "workspace:*",
    "tiny-benchy": "^2.1.0",
    "turbo": "^2.3.3"
  },
  "engines": {
    "node": ">= 18"
  },
  "scripts": {
    "build": "turbo run build",
    "build:core": "npm run --workspace=@treelight/core build",
    "build:watch": "npm run --workspace=@treelight/core build:watch",
    "inspect": "npm run --workspace=@treelight/core inspect",
    "tsc": "npm run --workspace=@treelight/core tsc",
    "test": "turbo run test",
    "test:update": "turbo run test -- --update-snapshots",
    "prebench": "npm run build",
    "bench": "node bench.js",
    "lint": "turbo run lint",
    "lint:repo": "biome ci --diagnostic-level=error --reporter=github",
    "lint:fix": "biome check --write",
    "create:language": "node ./scripts/create-language-package.mjs",
    "create:theme": "node ./scripts/create-theme-package.mjs"
  },
  "packageManager": "npm@10.9.4",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/matoous/treelight.git"
  }
}
